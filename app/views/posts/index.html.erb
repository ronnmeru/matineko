<div class="container  px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 col-mx-3">
 <div class="color"><%= flash[:notice]%></div>
 <div class="color"><%= flash[:update]%></div>

            <h1>User info</h1>
            <%= attachment_image_tag @user, :image, format: 'jpeg',size: "100x100" %>
            <table class="table">
                <tbody>
                    <tr>
                       <th>name </th>
                       <th> <%= @user.name %></th>
                     </tr>
                     <tr>
                        <th>Introduction </th>
                        <th><%= @user.introduction %> </th>
                    </tr>
                </tbody>
            </table>
            <div class="userbtan">
                <p><%= link_to "", edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block fas fa-user-cog "  %></p>
            </div>

        <h3 class="mt-3">新規投稿</h3>
      <%= form_with model:@post_new, local:true do |f| %>
      <% if @post_new.errors.any? %>
        <div class="alert alert-warning">
          <h2><%= @post_new.errors.count %> errors prohibited this book from being saved:</h2>
            <ul>
              <% @post_new.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
        </div>
            <% end %>

      <p >投稿画像</p>
      <%= f.attachment_field :image %>
      <p>タイトル</p>
      <%= f.text_field :title %>
      <p>イントロダクション</p>
      <%= f.text_area :content %>
      <p>タグ</p>
       <%= f.text_field :tag_list, value: @post_new.tag_list.join(','), class: "form-control" %>
      <div class="btn">
        <%= f.submit 'Create Book',class:"btn btn-success" %>
            <% end %>
      </div>
    </div>
        <div class="col-md-8 offset-md-1">
            <h2>Matineko</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>user</th>
                        <th>image</th>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th>like</th>
                        <th>tag</th>
                        <th></th>
                        <th></th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    <% @post.each do |post| %>
                        <tr>
                            <%= render 'post', post: post %>
                        </tr>
                     <% end %>
                </tbody>
            </table>
             <%#= render partial: 'posts/posts', locals: { posts: @search_post } %>
        </div>
    </div>
</div>