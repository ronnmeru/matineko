

<td><%= link_to users_path(post) do%>
   <%= attachment_image_tag post.user, :image, format: 'jpeg',size: "40x40" %><% end %>
</td>

<td><%=attachment_image_tag post, :image, format: 'jpeg',  size: "40x40"%>
</td>

<td>
  <%= link_to post.title, post_path(post.id) %>
</td>

<td>
  <%= post.content %>
 </td>

<td id="likes_buttons_<%= post.id %>">
  <%= render "likes/like", post: post %>
</td>

<td class="label label-primary">
  <% post.tags.each do |tag|%>
     <%= link_to "#{tag.name}(#{tag.taggings_count})", posts_path(tag: tag.name), class: "label label-default" %>
  <%end%>
</td>
<td>
  <%= link_to 'Show', post %>
</td>

<td>
  <%= link_to 'Edit', edit_post_path(post) %>
</td>

<td>
  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </td>


