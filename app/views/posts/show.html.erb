<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 col-mx-3">
<div class="color"><%= flash[:notice]%></div>
<div class="color"><%= flash[:update]%></div>


      <h1>User info</h1>
      <%= attachment_image_tag @user, :image, format: 'jpeg',  size: "100x100" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name </th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th> <%= @user.introduction %>  </th>
          </tr>
        </tbody>
      </table>
      <div class="userbtn">
        <p><%= link_to "", edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block fas fa-user-cog "  %></p>
      </div>

      <h3 class="mt-3">新規投稿</h3>
      <%= form_with model:@post_new, local:true do |f| %>
      <% if @post_new.errors.any? %>
        <div class="alert alert-warning">
        <h2><%= @post_new.errors.count %> errors prohibited this book from being saved:</h2>
        <ul>
          <% @post_new.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        </div>
      <% end %>

      <p >投稿画像</p>
      <%= f.attachment_field :image %>
      <p>タイトル</p>
      <%= f.text_field :title %>
      <p>イントロダクション</p>
      <%= f.text_area :content %>
      <div class="btn">
        <%= f.submit 'Create Book',class:"btn btn-success" %>
      <% end %>
      </div>
    </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
         <tbody>
            <tr>
              <td><%= link_to posts_path(@post.id) do%> <%= attachment_image_tag @user, :image, format: 'jpeg',  size: "100x100" %><% end %><div><%= link_to users_path(@post.user) do%><% @post.user.name %><% end %></div></td>
              <td><%=attachment_image_tag @post, :image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40"%></td>
              <td><%= link_to @post.title, posts_path(@post.id) %></td>
              <td><%= @post.content %></td>
                  <% if @post.user == current_user %>
              <td><%= link_to "Edit",edit_post_path(@post.id),class:"btn btn-sm btn-success " %></td>
              <td><%= link_to "Destroy", post_path(@post.id), method: :delete, "data-confirm" => "Are you sure?",class:"btn btn-sm btn-danger" %></td>
                  <% end %>
            </tr>
          </tbody>
        </table>
       
        
  
      </div>
    </div>
  </div>

