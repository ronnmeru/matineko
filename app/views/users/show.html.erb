<div class="container  px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 col-mx-3">
<div class="color"><%= flash[:notice]%></div>
<div class="color"><%= flash[:update]%></div>

      <h1>User info</h1>
      <%= attachment_image_tag @user, :image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name </th>
            <th> <%= @user.name %></th>
          </tr>
          <tr>
            <th>Introduction </th>
            <th><%= @user.introduction %> </th>
          </tr>
        </tbody>
      </table>
      <div class="userbtan">
        <p><%= link_to "", edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block fas fa-user-cog "  %></p>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, local:true do |f| %>
      <% if @book.errors.any? %>
        <div class="alert alert-warning">
        <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        </div>
      <% end %>
      <p>title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %>
      <div class="btn">
        <%= f.submit 'Create Book',class:"btn btn-success" %>
      <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
         <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
         </thead>
         <tbody>
          <% @books.each do |book_each| %>
            <tr>
              <td><%= link_to users_path(@user) do%>
                  <%= attachment_image_tag book_each.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
                  <% end %></td>
              <td><%= link_to book_each.title, book_path(book_each.id) %></td>
              <td><%= book_each.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
